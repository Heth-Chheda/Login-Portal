@model LoginPortalApp.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-9">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-dark text-white text-center py-4 rounded-top">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                    <p class="mb-0 small">Enter your new password</p>
                </div>

                <div class="card-body p-4">
                    <form method="post" asp-action="ResetPassword">
                        <!-- Hidden input to store the email -->
                        <input type="hidden" name="email" value="@ViewData["Email"]" />

                        <div class="form-group mb-4 position-relative">
                            <label for="Password" class="form-label text-dark">New Password</label>
                            <div class="input-group">
                                <input class="form-control" type="password" id="Password" asp-for="NewPassword" placeholder="Enter your new password" required />
                                <button type="button" id="toggle-password" class="btn btn-outline-secondary">
                                    <i class="bi bi-eye-slash" id="password-icon"></i>
                                </button>
                            </div>
                            <small id="password-strength" class="form-text text-muted"></small>
                            <span id="passwordError" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4 position-relative">
                            <label for="ConfirmPassword" class="form-label text-dark">Confirm Password</label>
                            <div class="input-group">
                                <input class="form-control" type="password" id="ConfirmPassword" asp-for="ConfirmPassword" placeholder="Confirm your new password" required />
                                <button type="button" id="toggle-confirm-password" class="btn btn-outline-secondary">
                                    <i class="bi bi-eye-slash" id="confirm-password-icon"></i>
                                </button>
                            </div>
                            <span id="confirmPasswordError" class="text-danger"></span>
                            <span id="password-match-message" class="text-success"></span>
                        </div>

                        <!-- Display ModelState Errors -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <p>@error.ErrorMessage</p>
                                }
                            </div>
                        }

                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark py-2 shadow-sm border-light">
                                Reset Password
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center py-3">
                    <p class="mb-1 small">
                        <a href="@Url.Action("Login", "Registration")" class="text-dark fw-bold text-decoration-none">Back to Login</a>.<br />
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/PasswordValidationforForgotPassword.js"></script>
}
